<h1><%= @entry.title %></h1>
<article class="fullpost">
  <%= date_author_comments(@entry) %>

  <%= author_edit_link(@entry) %>
  <%= simple_format @entry.content %>

  <section class="comments">
    <h2 id="commentlabel">Comments (<span id="num_comments"><%= @entry.comments.size %></span>)</h2>
    <% if signed_in? %>
      <%= render 'comments/form' %>
    <% else %>
      <p><em>You must <%= link_to 'signin', new_session_path %> to post comments</em></p>
    <% end %>
    <%= render partial: 'comments/comment', collection: @entry.comments.order('created_at desc') %>
  </section>
</article>
